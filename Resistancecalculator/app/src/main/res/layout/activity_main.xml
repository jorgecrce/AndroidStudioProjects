<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ie.itsligo.jorge.resistancecalculator.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1st band"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2nd band"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Multiplier"
            android:id="@+id/textView3"
            android:layout_row="0"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tolerance"
            android:id="@+id/textView4"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b01"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="#000000" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b10"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b20"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b40"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b02"
            android:layout_row="2"
            android:layout_column="0"
            android:backgroundTint="#895f58" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b03"
            android:layout_row="3"
            android:layout_column="0"
            android:backgroundTint="#ff2828" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b04"
            android:layout_row="4"
            android:layout_column="0"
            android:backgroundTint="#ff9f05" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b05"
            android:layout_row="5"
            android:layout_column="0"
            android:backgroundTint="#f7ff0e" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b06"
            android:layout_row="6"
            android:layout_column="0"
            android:backgroundTint="#3de727" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b07"
            android:layout_row="7"
            android:layout_column="0"
            android:backgroundTint="#0015ff" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b08"
            android:layout_row="8"
            android:layout_column="0"
            android:backgroundTint="#be2edb" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b09"
            android:layout_row="9"
            android:layout_column="0"
            android:backgroundTint="#a3a3a3" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/b010"
            android:layout_row="10"
            android:layout_column="0"
            android:backgroundTint="#ffffff" />

    </GridLayout>

</RelativeLayout>
