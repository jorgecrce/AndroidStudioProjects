<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ie.itsligo.jorge.magigbuttons.MainActivity">

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/button1000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:backgroundTint="#000000" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/button100"
        android:layout_alignBottom="@+id/button1000"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#e12121" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/button10"
        android:layout_below="@+id/button1000"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:backgroundTint="#3b4ec9" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/button1"
        android:layout_alignBottom="@+id/button10"
        android:layout_alignEnd="@+id/button100"
        android:backgroundTint="#41cb29" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/buttonClear"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/buttonGo"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button1" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textViewResult"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />
</RelativeLayout>
